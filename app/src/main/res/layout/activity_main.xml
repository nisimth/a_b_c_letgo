<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="course.android.letgo_302838271_305212946.TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="top|center"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_search"
            android:background="#f5f5f5"
            android:layout_weight="0.1"/>
        <EditText
            android:id="@+id/search_viewtxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/letgo"
            android:textColorHint="#f67493"
            android:textStyle="italic"
            android:layout_weight="0.8"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#ececec"
            android:gravity="center"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/filter_icon"
            android:layout_weight="0.1"
            android:background="#f5f5f5"

            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">


    </FrameLayout>

    <LinearLayout
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e2e2e2"
        >



        <ImageButton
            android:id="@+id/home_btn"
            android:text="@string/home_btn_txt"
            android:src="@drawable/home2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:background="#e2e2e2"
            android:onClick="homeOnClick"
            />
        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            >
        </View>
        <ImageButton
            android:id="@+id/notifications_btn"
            android:text="@string/notification_btn_txt"
            android:src="@drawable/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:background="#e2e2e2"
            />
        <View
            android:layout_width="40dp"
            android:layout_height="2dp">
        </View>
        <ImageButton
            android:id="@+id/camera_btn"
            android:src="@drawable/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:background="#e2e2e2"
            />
        <View
            android:layout_width="40dp"
            android:layout_height="2dp">
        </View>
        <ImageButton
            android:id="@+id/chats_btn"
            android:text="@string/chats_btn_txt"
            android:src="@drawable/chat"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e2e2e2"
            />
        <View
            android:layout_width="40dp"
            android:layout_height="2dp">
        </View>
        <ImageButton
            android:id="@+id/myprofile_btn"
            android:text="@string/myprofile_btn_txt"
            android:src="@drawable/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:background="#e2e2e2"
            />



    </LinearLayout>





</LinearLayout>
